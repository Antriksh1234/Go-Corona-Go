<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="6">

        <Button
            android:id="@+id/buttonwhat"
            android:background="#5E35B1"
            android:includeFontPadding="false"
            android:onClick="covidInfo"
            android:text="Understanding Covid-19 "
            android:textColor="#FFFFFF"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttongovern"
            android:layout_marginTop="5dp"
            android:background="#5E35B1"
            android:onClick="seegovtsite"
            android:text="Government Guidelines"
            android:textColor="#FFFFFF"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonnews"
            android:layout_marginTop="5dp"
            android:background="#5E35B1"
            android:onClick="seeNews"
            android:text="Latest Cororna News"
            android:textColor="#FFFFFF"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonsafety"
            android:layout_marginTop="5dp"
            android:background="#5E35B1"
            android:onClick="safety"
            android:text="Safety precautions"
            android:textColor="#FFFFFF"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonrumours"
            android:layout_marginTop="5dp"
            android:background="#5E35B1"
            android:onClick="showrumours"
            android:text="Funny rumours that spread around"
            android:textColor="#FFFFFF"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonabout"
            android:layout_marginTop="5dp"
            android:background="#5E35B1"
            android:onClick="aboutshow"
            android:text="About us"
            android:textColor="#FFFFFF"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="5"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>